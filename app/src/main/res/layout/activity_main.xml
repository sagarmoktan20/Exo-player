        android:text="video" />

    <Button
        android:id="@+id/button2"
        android:layout_margin="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="video" />

    <Button
        android:id="@+id/button3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
